<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>docker-swarm-dist</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/docker-deployment</directory>
            <includes>
                <include>docker-compose.yml</include>
                <include>conf/**</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/docker-deployment/swarm-scripts</directory>
            <includes>
                <include>**</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>./scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/docker-deployment/common-scripts</directory>
            <includes>
                <include>**</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>./scripts</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
